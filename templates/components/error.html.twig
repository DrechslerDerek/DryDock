<turbo-frame id="{{ turboId }}">
    <div class="row">
        <div class="col d-flex justify-content-center mt-5">
            <i class="text-danger fs-2 bi bi-exclamation-circle-fill me-2"></i>
            <span class="text-danger fs-2">{{ message }}</span>
        </div>
    </div>
    <div class="row">
        <div class="col d-flex justify-content-center mt-3">
            {% if link is defined and link is not empty %}
                <a class="btn btn-outline-dark" href="{{ link.linkHREF }}">{{ link.linkText }}</a>
            {% endif %}
        </div>
    </div>
</turbo-frame>