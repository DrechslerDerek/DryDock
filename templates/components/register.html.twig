<turbo-frame id="tf-register">
    {{ form_start(registrationForm) }}
        <div class="row justify-content-center mb-4">
            <div class="col col-lg-5">
                <div class="d-flex">
                    {{ form_row(registrationForm.captain) }}
                    <span class="input-group-text align-items-end" ><i class="bi bi-chevron-double-up"></i></span>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mb-4">
            <div class="col col-lg-5">
                <div class="d-flex">
                    {{ form_row(registrationForm.email) }}
                    <span class="input-group-text align-items-end" ><i class="bi bi-person-fill"></i></span>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mb-4">
            <div class="col col-lg-5">
                <div class="d-flex">
                    {{ form_row(registrationForm.password) }}
                    <span class="input-group-text align-items-end" ><i class="bi bi-shield-lock-fill"></i></span>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col col-lg-5 ps-3">
                <button class="btn btn-danger fw-bold btn-lg" type="submit" {{ stimulus_action('splash','formSubmit') }}>Register</button>
            </div>
        </div>
    {{ form_end(registrationForm) }}
</turbo-frame>