<table class="table table-hover parts-table mb-5 pb-5">
    <thead>
        <tr>
            <th scope="col">Category</th>
            <th scope="col">Origin</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Power</th>
            <th scope="col">Durability</th>
            <th scope="col">Cost</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody id="parts" {{ turbo_stream_listen('App\\Entity\\Part') }}>
    {% for part in parts %}
        <tr id="part_{{ part.id }}">
            <td>
                {{ part.category }}
            </td>
            <td>
                {{ part.origin }}
            </td>
            <td>
                {{ part.name }}
            </td>
            <td>
                {{ part.description }}
            </td>
            <td>
                {{ part.power }}
            </td>
            <td>
                {{ part.durability }}
            </td>
            <td>
                {{ part.cost }}
            </td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-gear-fill"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><button class="dropdown-item dropdown-edit" type="button" {{ stimulus_action('parts-table','openEdit') }} data-partid="{{ part.id }}"><i class="bi bi-pencil-fill me-2"></i>Edit</button></li>
                        <li><button class="dropdown-item" type="button"><i class="bi bi-trash2-fill me-2"></i>Delete</button></li>
                    </ul>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="modal fade" id="editPartModal" tabindex="-1" aria-labelledby="editPartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editPartModalLabel">Edit Part</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <turbo-frame id="tf-edit-part">

                </turbo-frame>
            </div>
        </div>
    </div>
</div>